<%- include('partials/header.ejs') %>

    <body>
        <%- include('partials/navbar.ejs') %>

            <div class="container">
                <h1>Guia Perguntas</h1>
                <hr>
                <% perguntas.forEach(pergunta=> { %>
                    <div class="card">
                        <div class="card-body">
                            <h3>
                                <%= pergunta.titulo %>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" href="/pergunta/<%= pergunta.id %>">
                                Responder
                            </a>
                        </div>
                    </div>
                    <p>
                        <% pergunta.descricao %>
                    </p>
                    <% }) %>
            </div>
    </body>

    <%- include('partials/footer.ejs') %>